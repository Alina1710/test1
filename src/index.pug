            main.content
                .content__inner
                    .content__text
                        p.content__text__p Notifycation add-on
                        h1.content__text__h1 Notify users via email
                    .content__form 
                        h2 Set conditions
                        .form
                            span.form__span Require 
                            ul.form__list
                                li.form__item
                                    button.button
                                        span.button__body
                                            span.button__text All
                                li.form__item
                                    button.button 
                                        span.button__body
                                            span.button__text Any
                            span.form__span of the conditions are met:    
                            .form__btn
                                button.form__btn__button
                                    span.form__btn__button__body
                                        span.form__btn__button__img
                                            img(src="https://img.icons8.com/material-outlined/26/000000/plus.png")
                                        span.form__btn__button__text Add another conditions
                        h2 Set add-on usage
                        .form__btn-group
                                ul.form__btn-group__list
                                    li.form__btn-group__item
                                        button.btn-group
                                            span.btn-group__body
                                                span.btn-group__text Use only once
                                    li.form__btn-group__item
                                        button.btn-group 
                                            span.btn-group__body
                                                span.btn-group__text Use after each revision     
                        h2 Notification recipiens
                        form.email
                            p.email__p
                                input.email__item(type="text" value="male@example.com")
                            p.email__p
                                label
                                    input.email__radio(type="radio")
                                    span.email__img
                                        img(src="images/input-radio.png")
                                    span.email__text Notify administrators
                        h2 Email message
                        form.message
                            p.message__p
                                input.message__item(type="text" value="Subject")
                                input.message__text(type="text" value="Message")
                        
